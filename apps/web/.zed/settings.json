{
  "languages": {
    "CSS": {
      "language_servers": [
        "tailwindcss-language-server",
      ]
    }
  },
  "lsp": {
    "vscode-css-language-server": {
      "settings": {
        "css.validate": false,
        "scss.validate": false,
        "less.validate": false,
        "css.lint.unknownAtRules": false,
        "scss.lint.unknownAtRules": "ignore",
        "less.lint.unknownAtRules": "ignore",
        "css": {
          "lint": {
            "unknownAtRules": false
          }
        }
      }
    }
  }
}
